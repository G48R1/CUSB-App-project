{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "canto.schema.json",
  "title": "canto",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["canto"]
    },
    "info": {
      "type": "object",
      "properties": {
        "tonalita": {
          "$ref": "tonalita.schema.json"
        },
        "metro": {
          "type": "string"
        },
        "tempo": {
          "type": "object",
          "properties": {
            "velocita": {
              "type": "string",
              "oneOf": [
                {"enum": ["veloce", "moderato", "lento"]},
                {"enum": ["lentissimo", "adagio", "andante", "allegro", "presto", "prestissimo"]}
              ]
            },
            "bpm": {
              "type": "number",
              "minimum": 1
            }
          },
          "required": ["velocita"],
          "additionalProperties": false
        }
      },
      "required": ["tonalita"],
      "additionalProperties": false
    },
    "titolo": {
      "type": "string",
      "minLength": 1
    },
    "intro": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "contenuto": {
            "$ref": "strumentale.schema.json"
          }
        },
        "required": ["contenuto"],
        "additionalProperties": false
      }
    },
    "outro": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "contenuto": {
            "$ref": "strumentale.schema.json"
          }
        },
        "required": ["contenuto"],
        "additionalProperties": false
      }
    },
    "strofe": {
      "type": "array",
      "items": {
        "$ref": "stanza.schema.json"
      }
    },
    "pre-chorus": {
      "type": "array",
      "items": {
        "$ref": "stanza.schema.json"
      }
    },
    "bridge": {
      "type": "array",
      "items": {
        "$ref": "stanza.schema.json"
      }
    },
    "ritornelli": {
      "type": "array",
      "items": {
        "$ref": "stanza.schema.json"
      }
    },
    "strumentali": {
      "type": "array",
      "items": {
        "$ref": "strumentale.schema.json"
      }
    },
    "struttura": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "struttura": {
            "$ref": "struttura-canto.schema.json"
          }
        },
        "required": ["label", "struttura"],
        "additionalProperties": false
      }
    }
  },
  "required": ["type", "titolo", "info"]
}